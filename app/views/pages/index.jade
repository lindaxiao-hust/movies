extends ../layout

block content
  .container(style="margin-bottom: 80px;")
    .row
    each category in categories
     .panel.panel-default
       .panel-heading
         h3
           a(href='/results?category=#{category._id}&page=0') #{category.name}
       .panel-body
         if category.movies && category.movies.length > 0
          each item in category.movies
            .col-md-2
              .thumbnail
                a(href="/movie/#{item._id}")
                  if item.poster.indexOf('http') > -1
                    img(src="#{item.poster}", alt="#{item.title}")
                  else
                    img(src="/upload/#{item.poster}", alt="#{item.title}")
                .caption
                  h3 #{item.title}
                  p: a.btn.btn-primary(href="/movie/#{item._id}", role="button")观看预告片
